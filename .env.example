# StayOn Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Database Name
POSTGRES_DB=stayonDB

# PostgreSQL Database User
POSTGRES_USER=stayon

# PostgreSQL Database Password
# IMPORTANT: Use a strong password in production
POSTGRES_PASSWORD=your_secure_password_here

# ============================================
# Backend Database Connection
# ============================================

# Database host (use 'database' for Docker Compose service name)
DB_HOST=database

# Database port
DB_PORT=5432

# Database name (should match POSTGRES_DB)
DB_NAME=stayonDB

# Database user (should match POSTGRES_USER)
DB_USER=stayon

# Database password (should match POSTGRES_PASSWORD)
DB_PASSWORD=your_secure_password_here

# ============================================
# Application Configuration
# ============================================

# Node environment (development, production, test)
NODE_ENV=development

# Backend server port (optional, defaults to 3000)
PORT=3000
